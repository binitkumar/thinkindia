.container.mini-frame
  .pull-right= social_share_button_tag(@press_release.title)
  %h3.text-center Press Release
  .pull-right
    %b= "Published on: #{@press_release.published_on.strftime("%d/%m/%Y")}"
  %p
    %h5= @press_release.title
  %p
    = @press_release.article.html_safe
  %p
    .pull-right= link_to 'Back', press_releases_path, class: 'btn btn-primary'
